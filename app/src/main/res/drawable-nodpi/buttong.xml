<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_height="wrap_content" android:layout_width="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#449def"/>
            <stroke android:width="4dp" android:color="#2f6699"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient android:startColor="#C0C0C0" android:centerColor="#00FF00" android:endColor="#708090" android:angle="270"/>
            <stroke android:width="3dp" android:color="#FFF"/>
        </shape>
    </item>


</selector>